<div class="danger-part-group">
    <p class="notes">{{localize "DANGERZONE.type-form.effect.description"}}</p>
    <div class="dz-hidden">
        <input type="text" value="{{origin}}" name="flags.danger-zone.origin">
    </div>
    <div class="form-group">
        <label>{{localize 'DANGERZONE.type-form.effect.edit.title'}}</label>
        <div class="form-fields">
            <button data-action="edit" title="{{localize 'DANGERZONE.type-form.effect.notes'}}" style="flex: 0 0 100%;"><i class="fas fa-hand-sparkles"></i> {{localize "DANGERZONE.type-form.effect.edit.title"}}</button>
        </div>
    </div>
    <div class="form-group">
        <label for="flags.danger-zone.limit">{{localize "DANGERZONE.type-form.effect.limit.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.effect.limit.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="flags.danger-zone.limit" {{checked data.flags.danger-zone.limit}}>
        </div>
    </div>
    <div class="form-group {{#unless modules.timesUpOn}}dz-hidden{{/unless}}">
        <label for="flags.dae.macroRepeat">{{localize "DANGERZONE.type-form.effect.macro.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.effect.macro.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <select name="flags.dae.macroRepeat" value="{{data.flags.dae.macroRepeat}}"> 
                <option value=""></option>
                {{selectOptions options.EFFECT.TIMESUPMACROREPEAT selected=data.flags.dae.macroRepeat localize=true}}
            </select>   
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label>
            <span>{{localize 'DANGERZONE.type-form.effect.enable-effects.label'}}</span>
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.effect.enable-effects.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <string-tags name="flags.danger-zone.enableEffects" value="{{data.flags.danger-zone.enableEffects}}"/></string-tags>
        </div>
    </div>
    <div class="form-group">
        <label>
            <span>{{localize 'DANGERZONE.type-form.effect.disable-effects.label'}}</span>
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.effect.disable-effects.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <string-tags name="flags.danger-zone.disableEffects" value="{{data.flags.danger-zone.disableEffects}}"/></string-tags>
        </div>
    </div>
    <div class="form-group">
        <label>
            <span>{{localize 'DANGERZONE.type-form.effect.delete-effects.label'}}</span>
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.effect.delete-effects.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <string-tags name="flags.danger-zone.deleteEffects" value="{{data.flags.danger-zone.deleteEffects}}"/></string-tags>
        </div>
    </div>
    <div class="form-group">
        <label>
            <span>{{localize 'DANGERZONE.type-form.effect.toggle-effects.label'}}</span>
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.effect.toggle-effects.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <string-tags name="flags.danger-zone.toggleEffects" value="{{data.flags.danger-zone.toggleEffects}}"/></string-tags>
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label for="flags.danger-zone.source">{{localize "DANGERZONE.source.label"}} 
            <span class="dz-toolt" title="{{localize 'DANGERZONE.source.danger.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <select name="flags.danger-zone.source" value="{{data.flags.danger-zone.source}}"> 
                {{selectOptions options.SOURCETREATMENT selected=data.flags.danger-zone.source localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group">
        <label for="flags.danger-zone.delay">{{localize "DANGERZONE.type-form.effect.delay.label"}}</label>
        <div class="form-fields">
            <input type="number" required data-dtype="Number" name="flags.danger-zone.delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{#if data.flags.danger-zone.delay}}{{data.flags.danger-zone.delay}}{{/if}}{{#unless data.flags.danger-zone.delay}}0{{/unless}}>
        </div>
    </div>
</div>