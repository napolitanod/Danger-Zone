<div class="tab active danger-part-group" data-tab="tile" data-group="sheet">
    <p class="notes">{{localize "DANGERZONE.type-form.tile.description"}}</p>
    <div class="form-group">
        <label for="file">{{localize random.visual.FILE}}</label>
        <div class="form-fields">
            <file-picker name="file" type="imagevideo" class="image" placeholder="{{localize random.visual.PLACEHOLDER}}" value="{{data.file}}"></file-picker>
        </div>
    </div>
    <div class="form-group">
        <label for="randomFile">{{localize random.visual.LABEL}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="randomFile" {{checked data.randomFile}}>
        </div>
    </div>
    <div class="form-group">
        <label for="scale">{{localize "DANGERZONE.type-form.tile.scale.label"}}
            <span class="units">{{localize 'DANGERZONE.ratio'}}</span>
        </label>
        <div class="form-fields">
            <input type="number" required name="scale" min="0.01" max="50" step="0.01" value={{data.scale}}>
        </div>
    </div>
    <div class="form-group">
        <label for="loop">{{localize "DANGERZONE.type-form.tile.loop.label"}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="loop" {{checked data.loop}}>
        </div>
    </div>
    <div class="form-group">
        <label for="z">{{localize "DANGERZONE.type-form.tile.z.label"}}</label>
        <div class="form-fields">
            <input type="number" required data-dtype="Number" name="z" step="1" value={{data.z}}>
        </div>
    </div>
    <div class="form-group">
        <label for="alpha">{{localize "DANGERZONE.type-form.tile.alpha.label"}}</label>
        <div class="form-fields">
            <range-picker name="alpha" value="{{data.alpha}}" min="0" max="1" step="0.05"></range-picker>
        </div>
    </div>
    <div class="form-group">
        <label for="hidden">{{localize "DANGERZONE.type-form.tile.hidden.label"}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="hidden" {{checked data.hidden}}>
        </div>
    </div>
    <div class="form-group">
        <label for="delay">{{localize "DANGERZONE.type-form.tile.delay.label"}}</label>
        <div class="form-fields">
            <input type="number" required data-dtype="Number" name="delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{data.delay}}>
        </div>
    </div>
    <div class="form-group {{#unless modules.taggerOn}}dz-hidden{{/unless}}">
        <label for="tag">{{localize "DANGERZONE.type-form.tile.tag.label"}}</label>
        <div class="form-fields">
            <input type="text" name="tag" placeholder="{{localize "DANGERZONE.type-form.tile.tag.description"}}"  value="{{data.tag}}">
        </div>
    </div>
</div>