<div class="tab danger-part-group" data-tab="settings" data-group="sheet">
    <div class="form-group">
        <label for="walls">{{localize "DANGERZONE.type-form.tokenMove.walls-block.label"}}</label>
        <div class="form-fields">
            <select name="walls" value="{{data.walls}}"> 
                {{selectOptions options.TOKENMOVE.WALLSBLOCK selected=data.walls localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group dz-hidden">
        <label for="tiles">{{localize "DANGERZONE.type-form.tokenMove.tiles-block.label"}}</label>
        <div class="form-fields">
            <select name="tiles" value="{{data.tiles}}"> 
                {{selectOptions options.TOKENMOVE.TILESBLOCK selected=data.tiles localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group">
        <label for="flag">{{localize "DANGERZONE.type-form.tokenMove.teleport.label"}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="teleport" {{checked data.teleport}}>
        </div>
    </div>
    <div class="form-group">
        <label for="flag">{{localize "DANGERZONE.type-form.tokenMove.flag.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.tokenMove.flag.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="flag" {{checked data.flag}}>
        </div>
    </div>
    <div class="form-group">
        <label for="source">{{localize "DANGERZONE.source.label"}} 
            <span class="dz-toolt" title="{{localize 'DANGERZONE.source.danger.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <select name="source" value="{{data.source}}"> 
                {{selectOptions options.SOURCETREATMENT selected=data.source localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group">
        <label for="sToT">{{localize "DANGERZONE.type-form.tokenMove.source-to-target.label"}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="sToT" {{checked data.sToT}}>
        </div>
    </div>
    <div class="form-group">
        <label for="delay">{{localize "DANGERZONE.type-form.tokenMove.delay.label"}}</label>
        <div class="form-fields">
            <input type="number" required data-dtype="Number" name="delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{data.delay}}>
        </div>
    </div>
</div>