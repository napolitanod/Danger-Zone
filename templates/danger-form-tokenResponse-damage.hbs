<div class="tab danger-part-group scrollable" data-tab="damage" data-group="sheet">
    <p class="notes">{{localize "DANGERZONE.type-form.tokenResponse.damage.description"}}</p>
    <div class="form-group">
        <label for="damage.enable">{{localize "DANGERZONE.type-form.tokenResponse.damage.enable.label"}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="damage.enable" {{checked data.damage.enable}}>
        </div>
    </div>     
    <div class="form-group">
        <label for="damage.type">{{localize "DANGERZONE.type-form.tokenResponse.damage.type.label"}}</label>
        <div class="form-fields">
            <select name="damage.type" value="{{data.damage.type}}"> 
                {{selectOptions options.TOKENRESPONSE.DAMAGETYPE selected=data.damage.type localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group">
        <label for="damage.amount">{{localize "DANGERZONE.type-form.tokenResponse.damage.amount.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.tokenResponse.damage.amount.title'}}"><i class="fas fa-info-circle"></i></span>
    </label>
        <div class="form-fields">
            <input type="text" name="damage.amount" placeholder="{{localize 'DANGERZONE.type-form.tokenResponse.damage.amount.description'}}" value="{{data.damage.amount}}">
        </div>
    </div>   
    <div class="form-group">
        <label for="damage.save">{{localize "DANGERZONE.type-form.tokenResponse.damage.save.label"}}</label>
        <div class="form-fields">
            <select name="damage.save" value="{{data.damage.save}}"> 
                {{selectOptions options.TOKENRESPONSE.DAMAGEONSAVE selected=data.damage.save localize=true}}
            </select>   
        </div>
    </div>   
    <h4>{{localize "DANGERZONE.type-form.tokenResponse.damage.secondary.label"}}</h4>
    <div class="form-group">
        <label for="damage.secondary.type">{{localize "DANGERZONE.type-form.tokenResponse.damage.secondary.type.label"}}</label>
        <div class="form-fields">
            <select name="damage.secondary.type" value="{{data.damage.secondary.type}}"> 
                <option value=""></option>
                {{selectOptions options.TOKENRESPONSE.DAMAGETYPE selected=data.damage.secondary.type localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group">
        <label for="damage.secondary.amount">{{localize "DANGERZONE.type-form.tokenResponse.damage.secondary.amount.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.tokenResponse.damage.secondary.amount.title'}}"><i class="fas fa-info-circle"></i></span>
    </label>
        <div class="form-fields">
            <input type="text" name="damage.secondary.amount" placeholder="{{localize 'DANGERZONE.type-form.tokenResponse.damage.secondary.amount.description'}}" value="{{data.damage.secondary.amount}}">
        </div>
    </div>   
    <div class="form-group">
        <label for="damage.secondary.save">{{localize "DANGERZONE.type-form.tokenResponse.damage.secondary.save.label"}}</label>
        <div class="form-fields">
            <select name="damage.secondary.save" value="{{data.damage.secondary.save}}"> 
                {{selectOptions options.TOKENRESPONSE.DAMAGEONSAVE selected=data.damage.secondary.save localize=true}}
            </select>   
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label for="damage.flavor">{{localize "DANGERZONE.type-form.tokenResponse.damage.flavor.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.tokenResponse.damage.flavor.description'}}"><i class="fas fa-info-circle"></i></span>
    </label>
        <div class="form-fields">
            <input type="text" name="damage.flavor" value="{{data.damage.flavor}}">
        </div>
    </div>
    <div class="form-group">
        <label for="damage.source">{{localize "DANGERZONE.source.label"}} 
            <span class="dz-toolt" title="{{localize 'DANGERZONE.source.danger.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <select name="damage.source" value="{{data.damage.source}}"> 
                {{selectOptions options.SOURCETREATMENT selected=data.damage.source localize=true}}
            </select>   
        </div>
    </div>
    <div class="form-group">
        <label for="damage.delay">{{localize "DANGERZONE.type-form.tokenResponse.damage.delay.label"}}</label>
        <div class="form-fields">
            <input type="number" required data-dtype="Number" name="damage.delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{#if data.damage.delay}}{{data.damage.delay}}{{/if}}{{#unless data.damage.delay}}0{{/unless}}>
        </div>
    </div>
</div>