<form class="danger-zone-scene" autocomplete="off">
    <div class="tab">
        <div class="danger-zone-scene-header flexrow">
            <div class="danger-zone-details flexrow">
                <div class="title">{{localize 'DANGERZONE.scene.title'}}</div>
                <div class="type">{{localize 'DANGERZONE.scene.type'}}</div>
                <div class="trigger">{{localize 'DANGERZONE.scene.trigger'}}</div>
                <div class="randomFile">{{localize 'DANGERZONE.scene.random'}}</div>
            </div>
            <div class="danger-zone-controls flexrow" data-id="{{this.sceneId}}">
                <a class="danger-zone-copy" title="{{localize 'DANGERZONE.scene.copy-danger-zone'}}" data-action="copy">
                    <i class="fas fa-copy"></i> {{localize 'DANGERZONE.copy'}}
                </a>
                <a class="danger-zone-add" title="{{localize 'DANGERZONE.scene.add-danger-zone'}}" data-action="add">
                    <i class="fas fa-plus"></i> {{localize 'DANGERZONE.add'}}
                </a>
            </div>
        </div>
        <ol class="danger-zone-scene-list flexrow">
            {{#each dangerZones }}
            <li class="scene-config flexrow" data-id="{{this.id}}" data-container="types" draggable="true">
                <div class="danger-zone-details flexrow">
                    <img src="{{this.danger.icon}}">
                    <div class="title">{{this.title}}</div>
                    <div class="type">{{this.danger.name}}</div>
                    <div class="trigger">{{this.triggerDescription}}</div>
                    <div class="randomFile">{{#if this.randomFile}}<i class="fas fa-radiation"></i>{{/if}}</div>
                </div>
                <div class="danger-zone-controls flexrow">
                    <a class="danger-zone-edit" title="{{localize 'DANGERZONE.scene.edit-danger-zone'}}" data-action="edit"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;&nbsp;
                    <a class="danger-zone-delete" title="{{localize 'DANGERZONE.scene.delete-danger-zone'}}" data-action="delete"><i class="fas fa-trash"></i></a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
    <footer>
        <p class="notes">{{localize 'DANGERZONE.scene.description'}}</p>
    </footer>
</form>
