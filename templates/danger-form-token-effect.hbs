<form autocomplete="off">
    <div class="tab">
        <p class="notes">{{localize "DANGERZONE.type-form.tokenEffect.description"}}</p>
        <div class="form-group">
            <label for="file">{{localize "DANGERZONE.type-form.tokenEffect.file.label"}}</label>
            <div class="form-fields">
                {{filePicker target="file" type="imagevideo"}}
                <input type="text" name="file" class="image" placeholder="{{localize "DANGERZONE.type-form.tokenEffect.file.placeholder"}}" value="{{file}}">
            </div>
        </div>
        <div class="form-group">
            <label for="delay">{{localize "DANGERZONE.type-form.tokenEffect.delay.label"}}</label>
            <div class="form-fields">
                <input type="number" data-dtype="number" name="delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{delay}}>
            </div>
        </div>
        <div class="form-group">
            <label for="scale">{{localize "DANGERZONE.type-form.tokenEffect.scale.label"}}
                <span class="units">{{localize 'DANGERZONE.ratio'}}</span>
            </label>
            <div class="form-fields">
                <input type="number" name="scale" min="0.01" max="50" step="0.01" value={{scale}}>
            </div>
        </div>
        <div class="form-group">
            <label for="duration">{{localize "DANGERZONE.type-form.tokenEffect.duration.label"}}</label>
            <div class="form-fields">
                <input type="number" data-dtype="number" name="duration" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{duration}}>
            </div>
        </div>
    </div>
    <footer class="sheet-footer flexrow">
        <button type="submit" name="submit"><i class='far fa-save'></i>{{localize 'DANGERZONE.save'}}</button>
    </footer>
</form>