<form autocomplete="off">
    <div class="tab">
        <p class="notes">{{localize "DANGERZONE.type-form.sourceEffect.description"}}</p>
        <div class="form-group">
            <label for="target">{{localize "DANGERZONE.type-form.sourceEffect.target.label"}}</label>
            <div class="form-fields">
                <select name="target" value="{{data.target}}" required> 
                    {{selectOptions targetOps selected=data.target localize=true}}
                </select>   
            </div>
        </div>
        <div class="form-group">
            <label for="file">{{localize "DANGERZONE.type-form.sourceEffect.file.label"}}</label>
            <div class="form-fields">
                {{filePicker target="file" type="imagevideo"}}
                <input type="text" required name="file" class="image" placeholder="{{localize "DANGERZONE.type-form.sourceEffect.file.placeholder"}}" value="{{data.file}}">
            </div>
        </div>
        <div class="form-group">
            <label for="randomFile">{{localize "DANGERZONE.type-form.sourceEffect.randomFile.label"}}</label>
            <div class="form-fields">
                <input type="checkbox" data-dtype="Boolean" name="randomFile" {{checked data.randomFile}}>
            </div>
        </div>
        <div class="form-group">
            <label for="scale">{{localize "DANGERZONE.type-form.sourceEffect.scale.label"}}
                <span class="units">{{localize 'DANGERZONE.ratio'}}</span>
            </label>
            <div class="form-fields">
                <input type="number" required name="scale" min="0.01" max="50" step="0.01" value={{data.scale}}>
            </div>
        </div>
        <div class="form-group">
            <label for="rotate">{{localize "DANGERZONE.type-form.sourceEffect.rotate.label"}}</label>
            <div class="form-fields">
                <input type="checkbox" data-dtype="Boolean" name="rotate" {{checked data.rotate}}>
            </div>
        </div>
        <div class="form-group">
            <label for="repeat">{{localize "DANGERZONE.type-form.sourceEffect.repeat.label"}}</label>
            <div class="form-fields">
                <input type="range" data-dtype="Number" name="repeat" value="{{data.repeat}}" min="0" max="20" step="1">
                <span class="range-value">{{data.repeat}}</span>    
            </div>
        </div>
        <div class="form-group">
            <label for="duration">{{localize "DANGERZONE.type-form.sourceEffect.duration.label"}}</label>
            <div class="form-fields">
                <input type="number" required data-dtype="Number" name="duration" placeholder="{{localize "DANGERZONE.ms"}}" step="1" value={{data.duration}}>
            </div>
        </div>
        <hr>
        <h4>{{localize "DANGERZONE.type-form.sourceEffect.audio.label"}}</h4>
        <div class="form-group">
            <label for="audio.randomFile">{{localize "DANGERZONE.type-form.sourceEffect.audio.random.label"}}</label>
            <div class="form-fields">
                <input type="checkbox" data-action="audio.random" data-dtype="Boolean" name="audio.randomFile" {{checked audio.randomFile}}>
            </div>
        </div>
        <div id="dz-sourceEffect-audio-file" class="form-group {{#if audio.randomFile}}hidden-picker{{/if}}">
            <label for="audio.file">{{#if randomFile}}{{localize "DANGERZONE.type-form.sourceEffect.audio.playlist.label"}}{{/if}}{{#unless audio.randomFile}}{{localize "DANGERZONE.type-form.sourceEffect.audio.file.label"}}{{/unless}}</label>
            <div class="form-fields">
                {{filePicker target="audio.file" type="audio"}}
                <input type="text"  name="audio.file" class="image" placeholder="{{#unless audio.randomFile}}{{localize "DANGERZONE.type-form.sourceEffect.audio.file.placeholder"}}{{/unless}}" value="{{audio.file}}">
            </div>
        </div>
        <div class="form-group">
            <label for="audio.volume">{{localize "DANGERZONE.type-form.sourceEffect.audio.volume.label"}}&nbsp;&nbsp;<i class="volume-icon fas fa-volume-down"></i></label>
            <div class="form-fields">
                <input type="range" title="{{localize "DANGERZONE.type-form.sourceEffect.audio.volume.label"}}" name="audio.volume" value="{{audio.volume}}" min="0" max="1" step="0.05">
            </div>
        </div>
        <hr>
        <div class="form-group">
            <label for="delay">{{localize "DANGERZONE.type-form.sourceEffect.delay.label"}}</label>
            <div class="form-fields">
                <input type="number" required data-dtype="Number" name="delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{data.delay}}>
            </div>
        </div>
    </div>
    <footer class="sheet-footer flexrow">
        <button type="submit" name="submit"><i class='far fa-save'></i>{{localize 'DANGERZONE.save'}}</button>
    </footer>
</form>