<form autocomplete="off">
    <div class="tab"> 
        <div class="dz-hidden">
            <input type="text" value="{{data.id}}" name="id">
        </div>
        <p class="notes">{{localize "DANGERZONE.edit-form.extend.description"}}</p>
        <div class="form-group">
            <label for="zoneId">{{localize "DANGERZONE.edit-form.extension.zone.label"}}</label>
            <div class="form-fields">
                <select name="zoneId" value="{{data.zoneId}}" required> 
                    {{selectOptions zoneOps selected=data.zoneId localize=false}}
                </select>   
            </div>
        </div>
        <div class="form-group">
            <label for="sequence">{{localize 'DANGERZONE.edit-form.extension.sequence.label'}}</label>
            <div class="form-fields">
                <select name="sequence" value="{{data.sequence}}"  required> 
                    {{selectOptions sequenceOps selected=data.sequence localize=true}}
                </select>     
            </div>
        </div>
        <div class="form-group">
            <label for="interaction">{{localize 'DANGERZONE.edit-form.extension.interaction.label'}}</label>
            <div class="form-fields">
                <select data-action="interaction" name="interaction" value="{{data.interaction}}"  required> 
                    {{selectOptions interactionOps selected=data.interaction localize=true}}
                </select>     
            </div>
        </div>
        <div class="form-group">
            <label>
                {{localize 'DANGERZONE.edit-form.extension.likelihood.label'}}
                <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.likelihood.description'}}"><i class="fas fa-info-circle"></i></span>
            </label>
            <div class="form-fields">
                <input type="range" name="likelihood" value="{{#if data.likehood}}{{data.likelihood}}{{else}}100{{/if}}" min="1" max="100" step="1"/>
                <span class="range-value">{{#if data.likehood}}{{data.likelihood}}{{else}}100{{/if}}</span>
            </div>
        </div>
        <div class="form-group">
            <label for="once">
                {{localize 'DANGERZONE.edit-form.extension.once.label'}}
                <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.once.description'}}"><i class="fas fa-info-circle"></i></span>
           </label>
            <div class="form-fields">
                <input type="checkbox" name="once" {{checked data.once}} />
            </div>
        </div>
        <div id="danger-zone-extension-trigger-fields" class="{{#unless isTrigger}}dz-hidden{{/unless}}"> 
            <hr>
            <h3>{{localize 'DANGERZONE.edit-form.extension.trigger.label'}}</h3>
            <div class="form-group">
                <label for="clear">
                    {{localize 'DANGERZONE.edit-form.extension.clear.label'}}
                    <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.clear.description'}}"><i class="fas fa-info-circle"></i></span>
                </label>
                <div class="form-fields">
                    <input type="checkbox" name="clear" {{checked data.clear}} />
                </div>
            </div>
            <div class="form-group">
                <label for="boundary">
                    {{localize 'DANGERZONE.edit-form.extension.boundary.label'}}
                    <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.boundary.description'}}"><i class="fas fa-info-circle"></i></span>
                </label>
                <div class="form-fields">
                    <input type="checkbox" name="boundary" {{checked data.boundary}} />
                </div>
            </div>
            <div class="form-group">
                <label for="target">
                    {{localize 'DANGERZONE.edit-form.extension.target.label'}}
                    <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.target.description'}}"><i class="fas fa-info-circle"></i></span>
                </label>
                <div class="form-fields">
                    <input type="checkbox" name="target" {{checked data.target}} />
                </div>
            </div>
            <div class="form-group">
                <label for="save">
                    {{localize 'DANGERZONE.edit-form.extension.save.label'}}
                    <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.save.description'}}"><i class="fas fa-info-circle"></i></span>
                </label>
                <div class="form-fields">
                    <input type="checkbox" name="save" {{checked data.save}} />
                </div>
            </div>
            <div class="form-group">
                <label for="source">
                    {{localize 'DANGERZONE.edit-form.extension.source.label'}}
                    <span class="dz-toolt" title="{{localize 'DANGERZONE.edit-form.extension.source.description'}}"><i class="fas fa-info-circle"></i></span>
                </label>
                <div class="form-fields">
                    <input type="checkbox" name="source" {{checked data.source}} />
                </div>
            </div>
        </div>
    </div> 
	<footer class="sheet-footer flexrow">
		<button type="submit" name="submit"><i class='far fa-save'></i>{{localize 'DANGERZONE.save'}}</button>
	</footer>
</form>