            <li data-id="sound" class="{{#if hasSound}}active{{/if}}">
                <button class="danger-zone-type-button" data-action="edit" title="{{localize "DANGERZONE.type-form.sound.description"}}"><i class="fas fa-volume-high"></i></button>   
                <label>{{localize 'DANGERZONE.type-form.sound.label'}}</label>
