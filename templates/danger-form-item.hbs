<div class="danger-part-group">
    <p class="notes">{{localize "DANGERZONE.type-form.item.description"}}</p>
    <div class="form-group">
        <label for="name">{{localize "DANGERZONE.type-form.item.name.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.item.name.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <string-tags required name="name" value="{{data.name}}"></string-tags>
        </div>
    </div>
    <div class="form-group">
        <label for="compendiumName">{{localize "DANGERZONE.type-form.item.compendium.label"}}
            <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.item.compendium.description'}}"><i class="fas fa-info-circle"></i></span>
        </label>
        <div class="form-fields">
            <select name="compendiumName" value="data.compendiumName" placeholder="{{localize "DANGERZONE.type-form.item.compendium.placeholder"}}" >  
                {{selectOptions compendiums.ITEM selected=data.compendiumName localize=true}}
            </select>
            </div>
    </div>
    <div class="form-group  {{#unless modules.itemPileOn}}dz-hidden{{/unless}}">
        <label for="pile">{{localize "DANGERZONE.type-form.item.pile.label"}}</label>
        <div class="form-fields">
            <input type="checkbox" data-dtype="Boolean" name="pile" {{checked data.pile}} data-action="pile">
        </div>
    </div>
    <div id="dz-token-fields" class="{{#if data.pile}}dz-hidden{{/if}}">
        <div class="form-group">
            <label for="action">{{localize "DANGERZONE.type-form.item.action.label"}} 
                <span class="dz-toolt" title="{{localize 'DANGERZONE.type-form.item.action.description'}}"><i class="fas fa-info-circle"></i></span>
            </label>
            <div class="form-fields">
                <select name="action" value="{{data.action}}"> 
                    {{selectOptions options.ITEM.TARGET selected=data.action localize=true}}
                </select>   
            </div>
        </div>
        <div class="form-group stacked command">
            <label for="updates">{{localize "DANGERZONE.type-form.item.updates.label"}}</label>
            <textarea name="updates" placeholder="{{localize "DANGERZONE.type-form.item.updates.description"}}" value="{{updates}}">{{data.updates}}</textarea>
        </div>
        <p class="notes">{{localize "DANGERZONE.type-form.item.interpolate.description"}}</p>
        <div class="form-group">
            <label for="source">{{localize "DANGERZONE.source.label"}} 
                <span class="dz-toolt" title="{{localize 'DANGERZONE.source.danger.description'}}"><i class="fas fa-info-circle"></i></span>
            </label>
            <div class="form-fields">
                <select name="source" value="{{data.source}}"> 
                    {{selectOptions options.SOURCETREATMENT selected=data.source localize=true}}
                </select>   
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="delay">{{localize "DANGERZONE.type-form.item.delay.label"}}</label>
        <div class="form-fields">
            <input type="number" required data-dtype="Number" name="delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{#if data.delay}}{{data.delay}}{{else}}0{{/if}}>
        </div>
    </div>
    <div class="form-group {{#unless modules.taggerOn}}dz-hidden{{/unless}}">
        <label for="tag">{{localize "DANGERZONE.type-form.item.tag.label"}}</label>
        <div class="form-fields">
            <input type="text" name="tag" placeholder="{{localize "DANGERZONE.type-form.item.tag.description"}}"  value="{{data.tag}}">
        </div>
    </div>
</div>