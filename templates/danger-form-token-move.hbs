<form autocomplete="off">
    <div class="tab">
        <p class="notes">{{localize "DANGERZONE.type-form.tokenMove.description"}}</p>
        <hr>
        <div class="form-group">
            <label>{{localize "DANGERZONE.type-form.tokenMove.horizontal.label"}}</label>
        </div>
        <div class="form-group">
            <label for="hz.dir">{{localize "DANGERZONE.type-form.tokenMove.horizontal-direction.label"}}</label>
            <div class="form-fields">
                <select name="hz.dir" value="{{data.hz.dir}}"> 
                    {{selectOptions horizontalDirOps selected=data.hz.dir localize=true}}
                </select>   
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "DANGERZONE.type-form.tokenMove.horizontal-distance.label"}}
                <span class="units">{{localize 'DANGERZONE.grids'}}</span>
            </label>
            <div class="form-fields">
                <label for="hz.min">{{localize "DANGERZONE.type-form.tokenMove.horizontal-distance-min.label"}}</label>
                <input type="number" placeholder="{{localize 'DANGERZONE.gridUnits'}}" data-dtype="Number" name="hz.min" min="0" step="1" value={{data.hz.min}}>
                <label for="hz.max">{{localize "DANGERZONE.type-form.tokenMove.horizontal-distance-max.label"}}</label>
                <input type="number" placeholder="{{localize 'DANGERZONE.gridUnits'}}" data-dtype="Number" name="hz.max" min="0" step="1" value={{data.hz.max}}>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <label>{{localize "DANGERZONE.type-form.tokenMove.vertical.label"}}</label>
        </div>
        <div class="form-group">
            <label for="v.dir">{{localize "DANGERZONE.type-form.tokenMove.vertical-direction.label"}}</label>
            <div class="form-fields">
                <select name="v.dir" value="{{data.v.dir}}"> 
                    {{selectOptions verticalDirOps selected=data.v.dir localize=true}}
                </select>   
            </div>
        </div>
        <div class="form-group">
            <label>{{localize "DANGERZONE.type-form.tokenMove.vertical-distance.label"}}
                <span class="units">{{localize 'DANGERZONE.grids'}}</span>
            </label>
            <div class="form-fields">
                <label for="v.min">{{localize "DANGERZONE.type-form.tokenMove.vertical-distance-min.label"}}</label>
                <input type="number" placeholder="{{localize 'DANGERZONE.gridUnits'}}" data-dtype="Number" name="v.min" min="0" step="1" value={{data.v.min}}>
                <label for="v.max">{{localize "DANGERZONE.type-form.tokenMove.vertical-distance-max.label"}}</label>
                <input type="number" placeholder="{{localize 'DANGERZONE.gridUnits'}}"  data-dtype="Number" name="v.max" min="0" step="1" value={{data.v.max}}>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <label for="delay">{{localize "DANGERZONE.type-form.tokenMove.delay.label"}}</label>
            <div class="form-fields">
                <input type="number" data-dtype="Number" name="delay" placeholder="{{localize "DANGERZONE.ms"}}" min="0" step="1" value={{data.delay}}>
            </div>
        </div>
    </div>
    <footer class="sheet-footer flexrow">
        <button type="submit" name="submit"><i class='far fa-save'></i>{{localize 'DANGERZONE.save'}}</button>
    </footer>
</form>